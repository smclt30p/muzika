<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.muzika.views.basic.SquareButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/bar_button_play"

        android:background="@drawable/icons8play96"/>

    <org.muzika.views.basic.SquareButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/bar_button_previous"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/bar_button_play"
        android:background="@drawable/icons8back96"/>

    <org.muzika.views.basic.SquareButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/bar_button_repeat"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        android:layout_toLeftOf="@id/bar_button_previous"
        android:background="@drawable/icons8repeat96"/>


    <org.muzika.views.basic.SquareButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/bar_button_play"
        android:id="@+id/bar_button_next"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/icons8forward96"/>

    <org.muzika.views.basic.SquareButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/bar_button_random"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/bar_button_next"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        android:background="@drawable/icons8questionmark96"/>

</RelativeLayout>